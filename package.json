{
  "name": "cloudformation-yaml-validator",
  "displayName": "cloudformation-yaml-validator",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.32.0"
  },
  "publisher": "champgm",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onCommand:extension.cloudFormationYamlValidator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/champgm/cloudformation-yaml-validator.git"
  },
  "homepage": "https://github.com/champgm/cloudformation-yaml-validator#readme",
  "author": "champgm",
  "main": "./out/src/extension",
  "license": "GPL-3.0-or-later",
  "contributes": {
    "commands": [
      {
        "command": "extension.cloudFormationYamlValidator",
        "title": "Cloud Formation YAML Validator: Validate YAML"
      }
    ]
  },
  "scripts": {
    "clean": "mkdir -p empty_dir && rsync -a --delete empty_dir/ out/ && rsync -a --delete empty_dir/ coverage/",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run clean && npm run build",
    "build": "tsc -p ./",
    "watch": "npm run clean && tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "test-dirty": "npm run build && node ./node_modules/vscode/bin/test",
    "lint": "tslint src/**/*.ts --fix",
    "publish-major": "vsce publish major",
    "publish-minor": "vsce publish minor",
    "publish-patch": "vsce publish patch"
  },
  "devDependencies": {
    "@types/assert": "^1.4.2",
    "@types/glob": "^7.1.1",
    "@types/lodash.clone": "^4.5.6",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.get": "^4.4.6",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/sinon": "^7.0.10",
    "@types/yaml": "^1.0.2",
    "decache": "^4.5.1",
    "glob": "^7.1.3",
    "istanbul": "^0.4.5",
    "remap-istanbul": "^0.13.0",
    "sinon": "^7.3.0",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "cloudformation-schema-js-yaml": "^1.0.1",
    "flatted": "^2.0.0",
    "lodash.clone": "^4.5.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "yaml": "^1.4.0"
  }
}